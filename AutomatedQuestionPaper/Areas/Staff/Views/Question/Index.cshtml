@{
    ViewBag.Title = "Add Questions";
    Layout = "~/Areas/Staff/Views/Shared/_staffLoginNavigation.cshtml";
}

@if (TempData["QuestionAddedSuccessfully"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["QuestionAddedSuccessfully"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<br />

<h4>Following are ways to submit questions</h4>

<br />

<a class="btn btn-outline-primary" href="@Url.Action("Index", "ManualType")">Manual Typing</a>
<a class="btn btn-outline-secondary" href="@Url.Action("Index", "FileUpload")">File upload</a>
<a class="btn btn-outline-secondary" href="@Url.Action("Index", "ParagraphQuestion")">Paragraph question extractor</a>

<br/>
<br/>

<h4>See available questions </h4>
