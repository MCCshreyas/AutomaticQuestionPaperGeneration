@model AutomatedQuestionPaper.Models.Teacher

@{
                /**/

                /**/

                ViewBag.Title = "DeleteTeacher";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeleteTeacher</h2>

@if (ViewBag.TeacherNotFoundErrorMessage != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @ViewBag.TeacherNotFoundErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@using (Html.BeginForm("DeleteTeacher", "Staff", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <input type="number" id="TeacherID" name="TeacherID" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-default" />
    </div>
}