@model IEnumerable<AutomatedQuestionPaper.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_adminLoginNavigation.cshtml";
}

<h2>Index</h2>

@if (ViewBag.DepartmentDeleteSuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.DepartmentDeleteSuccessMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (ViewBag.DepartmentDeleteFailtureMessage != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @ViewBag.DepartmentDeleteFailtureMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["DepartmentDeleteSuccessMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["DepartmentDeleteSuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@if (TempData["DepartmentAddedSuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["DepartmentAddedSuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<p>
    <div class="float-md-right mb-3">
        <a href=@Url.Action("Create", "Department") class="btn btn-outline-success btn-block">
            <span class="fa fa-plus" aria-hidden="true"></span>
            Add new
        </a>
    </div>
</p>



@{
    var grid = new WebGrid();
    grid.Bind(Model);
}


@grid.GetHtml("table table-bordered table-striped table-responsive-lg ",
    mode: WebGridPagerModes.All,
    firstText: "<< First",
    previousText: "< Prev",
    nextText: "Next >",
    lastText: "Last >>",
    columns: grid.Columns(
        grid.Column("Id", "Id"),
        grid.Column("DepartmentName", "Department name"),
        grid.Column(format: @<text>@Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-outline-primary"}) </text>),
        grid.Column(format: @<text>@Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {onclick = "return confirm('Are you sure you wish to delete this department ?');", @class = "btn btn-outline-secondary"})</text>))
    )