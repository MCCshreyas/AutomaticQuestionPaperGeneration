@using AutomatedQuestionPaper.Controllers
@using AutomatedQuestionPaper.Models
@model AutomatedQuestionPaper.Models.Admin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
@if (TempData["SessionErrorMessage"] != null)
{
    var bs = new BaseController();
    bs.Alert("Session error", (string) TempData["SessionErrorMessage"], Enums.NotificationType.error);

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="margin: 0 auto; width: 50%;">
        <h3 class="display-4" style="text-align: center">Log in</h3>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Username, new {@class = ""})
            <div class="">
                @Html.EditorFor(model => model.Username, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Username, "", new {@class = "text-danger"})
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
        </div>
        

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new {@class = ""})
            <div class="">
                @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group" style="text-align: center">
            <div class="">
                <input type="submit" value="Sign in" class="btn btn-outline-primary btn-lg"/>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}