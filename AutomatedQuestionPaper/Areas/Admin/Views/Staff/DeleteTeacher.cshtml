@model AutomatedQuestionPaper.Models.Staff

@{
    ViewBag.Title = "DeleteTeacher";
    Layout = "~/Areas/Admin/Views/Shared/_adminLoginNavigation.cshtml";
}

<br />

@if (ViewBag.TeacherNotFoundErrorMessage != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @ViewBag.TeacherNotFoundErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<h4>DeleteTeacher</h4>

<br/>
@using (Html.BeginForm("DeleteTeacher", "Staff", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-4 col-md-4 col-xl-4">
            <label class="col-form-label">Enter Teacher ID</label>
        </div>

        <div class="col-sm-4 col-md-4 col-xl-4">
            <div class="form-group">
                <input type="number" id="TeacherID" name="TeacherID" class="form-control" required/>
            </div>
        </div>

        <div class="col-sm-4 col-md-4 col-xl-4">
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
            </div>
        </div>
    </div> 
}