@model List<AutomatedQuestionPaper.Models.ExamPaper>

@{
    ViewBag.Title = "Question paper repository";
    Layout = "~/Areas/Staff/Views/Shared/_staffLoginNavigation.cshtml";
}

@{
    var grid = new WebGrid();

    grid.Bind(Model);
}

<h4> Question paper repository </h4>

@if (TempData["QuestionPaperDeleted"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["QuestionPaperDeleted"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@grid.GetHtml("table table-bordered table-striped table-responsive-lg ",
    mode: WebGridPagerModes.All,
    firstText: "<< First",
    previousText: "< Prev",
    nextText: "Next >",
    lastText: "Last >>",
    columns: grid.Columns(
        grid.Column("Id", "Id"),
        grid.Column("PaperName", "Question paper name"),
        grid.Column(format: @<text>@Html.ActionLink("PDF", "QuestionPaperView", new {id = item.Id}, new {@class = "btn btn-secondary btn-outline-warning"})</text>),
        grid.Column(format: @<text>@Html.ActionLink("Word", "QuestionPaperDownloadWord", new {id = item.Id}, new {@class = "btn btn-secondary btn-outline-warning"})</text>),
        grid.Column(format: @<text>@Html.ActionLink("Delete",
                                       "QuestionPaperDelete",
                                       new {id = item.Id},
                                       new {onclick = "return confirm('Are you sure you wish to delete this article?');", @class = "btn btn-secondary btn-outline-danger"}
                                       )</text>)
        ))

@Scripts.Render("~/bundles/jquery")